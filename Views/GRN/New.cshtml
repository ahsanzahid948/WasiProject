                    GRN.GRNDetails.push(GRNDetails);

                    GRNDetails = { "ID": "","LeadgerPage": "", "Description": "", "AU": "", "QTYCreated": "", "QTYRecived": "",  "Rate": "", "TotalValue": "", "GRNID": "", };

                });

            }

            return GRN;
        }
        $("#GoodsReceiptForm").submit(function (event) {

            event.preventDefault();
            SaveGRNRecord();

        });

