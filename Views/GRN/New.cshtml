        function AJaxObject() {

            var GRN = { "ID": "", "Name": "", "DesignationID": "", "Lab": "", "Project": "", "GRNNo": "", "SuplyOrderNo": "", "GRNDate": "", "SupplierName": "", "SupplierAddress": "", "GRNDetails": [] };
